<div class="gray_border">
<h1>Upcoming Events</h1>

<% @articles.each do |article |%>
	<div class="article">
		<h2><%= link_to article.title, article_url(article) %></h2>
		<p class="published_on"><span>On <%= article.published_date %> in <%= article.published_at %></span></p>
		<p class="teaser"><%= article.teaser %> <%= link_to '...', article_url(article) %></p>
		
		<% if logged_in? %>
		<div class="links">
			<%= link_to 'Edit', edit_article_url(article) %>
			<%= link_to 'Delete', article_url(article), :method => :delete, :confirm => "Are you sure?" %>
		</div>
		<% end %>
	</div>	
<% end %>

</div>

<% if logged_in? %>
<div class="links">
	<%= link_to 'New', new_article_url %>
</div>	
<% end %>

