<div class="search boxes gray_border">
	<h2>Search</h2>
	<% form_tag :controller => 'properties', :action => 'search' do %>
		<p>
			<%= label_tag :location %><%= select_tag "location", options_from_collection_for_select(@locations,"area","area"), :multiple => true %>
		</p>
		<p>
			<%= label_tag :price_range %><%= select_tag "price_range", options_from_collection_for_select(@price_range,"range","range") %>
		</p>
		<p>
			<%= label_tag :unit_type %><%= select_tag "unit_type", options_for_select(@unit_types), :multiple => true %>
		</p>
		<p><%= submit_tag 'Search' %></p>
		
	<% end %>
	<p>For a list of all properties, click <%= link_to 'here', properties_url %></p>
</div>	