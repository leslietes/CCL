			<%= link_to (image_tag @setting.featured3.url), "#{eval(@setting.featured3_link)}" %>
			<span><%= @setting.featured3_caption %></span>
		</li>
		<% end %>
		
		<% if @setting.featured4? %>
		<li class="s3sliderImage">
			<%= link_to (image_tag @setting.featured4.url), "#{eval(@setting.featured4_link)}" %>
			<span><%= @setting.featured4_caption %></span>
		</li>
		<% end %>
		
		<% if @setting.featured5? %>
		<li class="s3sliderImage">
			<%= link_to (image_tag @setting.featured5.url), "#{eval(@setting.featured5_link)}" %>
			<span><%= @setting.featured5_caption %></span>
		</li>
		<% end %>
		
		<div class="clear s3sliderImage"></div>
	</ul>
</div>
<% end %>