<div class="gray_box">
	<div class="header">
		<h1>Contact Us</h1>
	</div>
	<div class="content">
		<div>
			<h3>Transact only with a realtor</h3>
			<%= link_to "http://www.realtor.com/basics/allabout/realtors/why.asp", "http://www.realtor.com/basics/allabout/realtors/why.asp" %>
			<br><br>
		</div>
			
		<% form_for @contact do |f| %>
			<%= f.error_messages %>
			<%= f.hidden_field :subject, :value => "Contact Us Form" %>
			<%= hidden_field_tag :from,  "Contact Us" %>
			
			<p><label>Your Full Name</label><br><%= f.text_field :name%></p>
			<p><label>Contact Number</label><br><%= f.text_field :contact_no %></p>
			<p><label>Your Email Address</label><br><%= f.text_field :email%></p>
			<p><label>Your Message</label><br><%= f.text_area :message %></p>
			<p><%= f.submit 'Send' %></p>
		<% end %>
	</div>
	<div class="footer"></div>
</div>	

<br>