<%#= render :partial => 'slider' %>

<!--div>
	Cebucondolistings.com is the premier site for the most comprehensive and up-to-date listings of new and upcoming condominium development projects in Cebu City and nearby areas.
</div-->	

<div class="gray_box">
	<div class="header home">
		<h1>&nbsp;</h1>	
	</div>
	<div class="content">
		<div id="featured">
		<ul>
			<% @properties.each do |p| %>
			<li>
				<h3><%= link_to p.name, property_url(p) %></h3>
				<div class="image"><%= link_to (image_tag p.photo.url(:thumb)), property_url(p) %></div>
				
				<div class="info">
					<% if p.completed? %>
						<div class="rfo">READY FOR OCCUPANCY</div>
					<% else %>
						<div class="left">
							<% if !p.target_completion_date.blank? %>
							<p>Estimated delivery<br><%= p.target_completion_date %></p>
							<% end %>
						</div>
						<div class="right">
							<% if p.as_low_as_label == " downpayment" && !p.as_low_as.blank? %>
							    <p>Downpayment for as low as <%= number_to_currency(p.as_low_as, :unit => "", :precision => 0) %></p>
							<% elsif "/month" && !p.as_low_as.blank? %>
							    <p>As low as <%= number_to_currency(p.as_low_as, :unit => "", :precision => 0) %>/month</p>
							<% end %>
						</div>	
					<% end %>	
				</div>	
				
			</li>
			<% end %>
			<div class="clear"></div>
		</ul>
		</div>
		<div class="clear"></div>
	</div>
	<div class="footer"></div>
</div>