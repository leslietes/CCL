<% content_for :property_listings do %>

	<div class="property">
	
		<h1><%= @property.name %></h1>
		
		<ul class="submenu">
			<li><%= link_to 'Information', property_url(@property) %></li>
			<li><%= link_to 'Gallery', property_gallery_url(@property) %></li>
		</ul>

		<%= render :partial => "#{@partial}" %>

		<div class="inquiry gray_border clear">
			<% form_for @contact do |f| %>
				<%= f.error_messages %>
				<%= f.hidden_field :subject, :value => @property.name %>
				<p><label>Your Full Name</label><%= f.text_field :name%></p>
				<p><label>Contact Number</label><%= f.text_field :contact_no %></p>
				<p><label>Email Address</label><%= f.text_field :email%></p>
				<p><label>Your Message</label><%= f.text_area :message %></p>
				<%= recaptcha_tags %>
				<p><%= f.submit 'Send' %></p>
			<% end %>
		</div>	
	
	</div>
<% end %>