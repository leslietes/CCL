<%= render :partial => 'slider' %>

<div id="featured"  class="gray_border">
	<h1>Featured Properties</h1>
	<ul>
		<% @properties.each do |p| %>
		<li>
			<h3><%= link_to p.name, property_url(p) %></h3>
			<div class="image"><%= image_tag p.photo.url(:thumb) %></div>
			
			<% if p.completed? %>
			<div class="completed">completed</div>
			<% else %>
			<div class="turnover">est. delivery Jan 2011</div>
			<% end %>
			
			<div class="price">As low as P10,000/month</div>
		</li>
		<% end %>
		<div class="clear"></div>
	</ul>
</div>