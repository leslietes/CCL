<%= render :partial => 'slider' %>

<div class="gray_box">
	<div class="header">
		<h1>Featured Properties</h1>	
	</div>
	<div class="content">
		<div id="featured">
		<ul>
			<% @properties.each do |p| %>
			<li>
				<h3><%= link_to p.name, property_url(p) %></h3>
				<div class="image"><%= link_to (image_tag p.photo.url(:thumb)), property_url(p) %></div>
				
				<div class="info">
					<% if p.completed? %>
						<div class="rfo">READY FOR OCCUPANCY</div>
					<% else %>
						<div class="left">
							<p>Estimated delivery<br><%= p.target_completion_date %></p>
						</div>
						<div class="right">
							<p><%= p.as_low_as_label %><br>as low as <%= number_to_currency(p.as_low_as, :unit => "", :precision => 0) %>/mo*</p>
						</div>	
					<% end %>	
				</div>	
				
			</li>
			<% end %>
			<div class="clear"></div>
		</ul>
		</div>
	</div>
	<div class="footer"></div>
</div>