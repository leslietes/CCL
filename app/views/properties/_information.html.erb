<% if @property.has_amenities? %>
  <h3>Amenities</h3>
  <%= @property.amenities%>
<% end %>

<br/>

<% if @property.has_unit_specifications? %>
  <h3>Unit Specifications</h3>
  <%= @property.unit_specifications %>
<% end %>

<br/>

<% if @property.has_reservation_fee? %>
	<%= label_tag :reservation_fee %><p><%= @property.reservation_fee %></p>
<% end %>
		
<%#= render :partial => 'floor_plans' %>
	
		
<% if logged_in? %>
	<p><%= label_tag :featured %><%= @property.featured %></p>
	
	<p><%= label_tag :hidden %><%= @property.hidden %></p>
	
	<p><%= label_tag :sold_out %><%= @property.sold_out %></p>
	
	<p><%= label_tag :preselling %><%= @property.preselling %></p>
	
	<div class="links">
		<%= link_to 'Edit', edit_property_url(@property) %> |
		<%= link_to 'Delete', property_url(@property), :method => :delete, :confirm => "Are you sure?" %> |
		<%= link_to 'Gallery', property_gallery_url(@property) %>
	</div>	
<% end %>