<script type="text/javascript">
	jQuery(document).ready(function(){
		$('#s3slider').s3Slider({
			timeOut: 4000
		});
	});
</script>

<% if has_featured? %>
<div id="s3slider">
	<ul id="s3sliderContent">
		
		<% if @setting.featured1? %>
		<li class="s3sliderImage">
			<%= link_to (image_tag @setting.featured1.url), "#{eval(@setting.featured1_link)}" %>
			<span><%= @setting.featured1_caption %></span>
		</li>
		<% end %>
		
		<% if @setting.featured2? %>
		<li class="s3sliderImage">
			<%= link_to (image_tag @setting.featured2.url), "#{eval(@setting.featured2_link)}" %>
