<div class="blue">
	<div class="main_content">
	<h1>Search Results</h1>
	
	<div class="left">
	<div class="content search_results">
		<ul>

			<% @properties.each do |p| %>
				<li>
					<div class="photo">
						<%= link_to (image_tag p.photo.url(:thumb)), property_url(p) %>
					</div>
					<h2>
						<%= link_to p.name, property_url(p) %>
					</h2>
					<% if p.has_tagline? %>
						<div style="color:#333;font-weight:bold;font-size:12px;">Own a unit for as low as <%= number_to_currency(p.as_low_as, :unit => "P ", :precision => 0) %><%= p.as_low_as_label %></div>
					<% end %>

					<div class="info">
						<label>Developer</label> <%= p.developer_name %><br>
						<label>Location</label> <%= p.location %><br>
						<label>Units</label> <%= p.all_unit_types.join(', ') %><br>
						<% if p.has_target_completion_date? %>
							<label>Target Completion Date</label> <%= p.target_completion_date %><br>
						<% end %>
					</div>	
					<div class="clear"></div>
				</li>
			<% end %>
		</ul>
		
		<div class="paginate">
			<%= will_paginate @properties, :class => "digg_pagination" %>
			<div class="page_info">
			<%= page_entries_info @properties %>
			</div>
		</div>
	</div>
	</div>
	
	<div class="right">
		<%= render :partial => '/shared/featured_news' %><br/>
		<%= render :partial => 'shared/search_form' %>
	</div>
	<div class="footer"></div>
</div>
</div></div>
<br>