<h3>Highlights </h3>

<%= label_tag :developer %><p><%= @property.developer_name %></p>
<%= label_tag :location %><p><%= @property.location %></p>
<% if @property.has_address? %>
  <%= label_tag :address %><p><%= @property.address %></p>
<% end %>

<% if @property.has_target_completion_date? %>
  <%= label_tag :est_delivery_date %><p><%= @property.target_completion_date %></p>
<% end %>

<%= label_tag :type %><p><%= @property.property_type %></p>
<%= label_tag :no_of_floors%><p><%= @property.no_of_floors%></p>
<%= label_tag :no_of_bldgs%><p><%= @property.no_of_bldgs%></p>
<br/><br/>

<%#= label_tag :unit_types %><br/>
<%#= display_unit_info(@property.all_unit_info) %>
