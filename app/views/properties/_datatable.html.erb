<table id="properties">
	<thead>
		<tr>
			<th>Name</th>
			<th>Developer</th>
			<th>Location</th>
			<th>Unit Types</th>
			<th>Price Range*<br></th>
			<th>Estimated Delivery</th>
			<% if logged_in? %>
			<th>Coordinates</th>
			<th>Status</th>
			<th>Actions</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
	<% @properties.each do |property| %>
	<tr>
		<td class="left" style="padding-left:5px" width="150px"><%= link_to property.name, property_url(property) %></td>
		<td class="center" width="200px"><%= property.developer_name %></td>
		<td class="center" width="150px"><%= property.location %></td>
		<td class="center" width="100px"><%= show_all_unit_types(property.all_unit_types) %></td>
		<td class="center" width="110px"><%= show_all_unit_prices(property.all_unit_prices) %></td>
		<td class="center" width="160px"><%= property.completion_date %></td>
		<% if logged_in? %>
		<td class="center">
			<%= property.latitude %>, <%= property.longitude%>
		</td>
		<td class="center">
			<%= label_tag :sold_out %><%= property.sold_out %><br/>
			<%= label_tag :preselling %><%= property.preselling %><br/>
			<%= label_tag :hidden %><%= property.hidden %><br/>
			<%= label_tag :featured %><%= property.featured%>
		</td>
		<td class="center" width="100px">
			<%= link_to 'Show', property_url(property) %>
			<%= link_to 'Edit', edit_property_url(property) %>
			<%= link_to 'Delete', property_url(property), :method => :delete, :confirm => "Are you sure?" %>
		</td>
		<% end %>
	</tr>
	<% end %>
	</tbody>
</table>
<div class="clear"></div>
