<% if !@featured_articles.empty? %>
<div class="featured_news boxes gray_border">
	<h1>Upcoming Events</h1>
	<div class="box_content">
	<ul>
		<li>
			<% @featured_articles.each do |a| %>
				<p class="title"><%= link_to a.title, article_url(a) %></p>
				<p class="published_on"><span>On <%= a.published_date %> in <%= a.published_at %></span></p>
				<!--p class="teaser"><%= a.teaser %> <%= link_to '...', article_url(a) %></p-->
			<% end %>
		</li>
	</ul>	
	</div>
</div>
<% end %>